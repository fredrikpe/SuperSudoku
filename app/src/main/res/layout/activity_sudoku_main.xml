<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sudoku_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fredrik.sudoku.SudokuMain">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:id="@+id/mainLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toggleLayout">

            <ToggleButton
                android:text="Fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fillToggleButton"
                android:layout_weight="1"
                android:textOff="Fill"
                android:textOn="Fill" />

            <ToggleButton
                android:text="Mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/markToggleButton"
                android:layout_weight="1"
                android:textOff="Mark"
                android:textOn="Mark" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLayout">

            <ToggleButton
                android:text="ToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toggleButton1"
                android:layout_weight="1"
                android:textOff="1"
                android:textOn="1" />

            <ToggleButton
                android:text="ToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toggleButton2"
                android:layout_weight="1"
                android:textOff="2"
                android:textOn="2" />

            <ToggleButton
                android:text="ToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toggleButton3"
                android:layout_weight="1"
                android:textOff="3"
                android:textOn="3" />

            <ToggleButton
                android:text="ToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toggleButton4"
                android:layout_weight="1"
                android:textOff="4"
                android:textOn="4" />

            <ToggleButton
                android:text="ToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toggleButton5"
                android:layout_weight="1"
                android:textOff="5"
                android:textOn="5" />

            <ToggleButton
                android:text="ToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toggleButton6"
                android:layout_weight="1"
                android:textOff="6"
                android:textOn="6" />

            <ToggleButton
                android:text="ToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toggleButton7"
                android:layout_weight="1"
                android:textOff="7"
                android:textOn="7" />

            <ToggleButton
                android:text="ToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toggleButton8"
                android:layout_weight="1"
                android:textOff="8"
                android:textOn="8" />

            <ToggleButton
                android:text="ToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toggleButton9"
                android:layout_weight="1"
                android:textOff="9"
                android:textOn="9" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
